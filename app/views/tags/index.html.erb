<h1>All Tags</h1>

<ul>
  <% @tags.each do |tag| %>
  <li><%= link_to tag.name, tag_path(tag), class: 'tag-name', id: "tag_#{tag.id}" %>
  <% if logged_in? %>
    - <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Do you really want to delete this tag?"}  %>
  <% end %>
  </li><br>    
  
  <% end %>
</ul>
